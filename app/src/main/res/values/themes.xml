<resources>
    <!-- default theme selector -->
    <style name="AppTheme" parent="Base.Theme.DayNight"/>

    <!-- base theme selector -->
    <style name="Base.Theme.DayNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <!-- not working pre-Lollipop
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
         -->
        <item name="colorAccent">@color/app_accent</item>

        <!-- TODO apply in API level 27
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightNavigationBar">?android:attr/isLightTheme</item>
        -->

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="chatThemeDayNightMessageTextColor">?android:attr/textColorPrimary</item>
        <item name="chatThemeDayNightDateTextColor">?android:attr/textColorSecondary</item>

        <item name="chatThemeDayOnlyMessageTextColor">@color/primary_text_light</item>
        <item name="chatThemeDayOnlyDateTextColor">@color/secondary_text_light</item>

        <!-- TODO
        <item name="chatThemeNightOnlyMessageTextColor"></item>
        <item name="chatThemeNightOnlyDateTextColor"></item>
        -->

        <item name="chatQuoteLineColor">@color/chat_quote_line_color</item>
    </style>

    <!-- base theme for dialog activities -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <!-- not working pre-Lollipop
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        -->
        <item name="colorAccent">@color/app_accent</item>
    </style>

    <style name="AppTheme.QuickReplyDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <!-- not working pre-Lollipop
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        -->
        <item name="colorAccent">@color/app_accent</item>
    </style>

</resources>
